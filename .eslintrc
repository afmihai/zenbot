{
    "env": {
        "es6": true,
        "node": true,
        "jasmine": true,
        "browser": true
    },
    "extends": [
        "eslint:recommended",
        "prettier"
    ],
    "rules": {
        "no-console": 0,
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "prettier/prettier": [
            "error"
        ]
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 6,
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        }
    },
    "plugins": ["prettier"],
}
